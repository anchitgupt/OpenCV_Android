<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageButton
        android:id="@+id/front_image"
        android:layout_width="0dp"
        android:scaleType="fitCenter"
        android:layout_height="200dp"
        android:contentDescription="RECORD"
        app:srcCompat="@android:drawable/presence_audio_online"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="28dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/record"
        android:layout_width="60dp"
        android:scaleType="fitCenter"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:src="@android:drawable/ic_btn_speak_now"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/front_image"
        app:layout_constraintVertical_bias="0.114" />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_media_play"
        android:background="@android:color/white"
        app:layout_constraintLeft_toRightOf="@+id/record"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toTopOf="@+id/gallery"
        app:layout_constraintHorizontal_bias="0.961"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/front_image"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:id="@+id/stop"
        app:srcCompat="@android:drawable/ic_media_pause"
        android:background="@android:color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/record"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/floatingActionButton"
        app:layout_constraintVertical_bias="0.754"
        app:layout_constraintRight_toLeftOf="@+id/floatingActionButton"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageButton
        android:id="@+id/gallery"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:background="@android:color/white"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/stop"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="147dp"
        app:layout_constraintTop_toBottomOf="@+id/front_image"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/floatingActionButton"
        app:layout_constraintVertical_bias="0.571" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="47dp"
        android:layout_height="45dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="?attr/actionModeShareDrawable"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>